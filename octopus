    <script>
        function showPage(page) {
            document.getElementById('main-page').classList.remove('active');
            document.getElementById('student-page').classList.remove('active');
            
            if (page === 'student') {
                document.getElementById('student-page').classList.add('active');
            } else {
                document.getElementById('main-page').classList.add('active');
            }
            
            window.scrollTo(0, 0);
        }

        function verifyStudent() {
            const email = document.getElementById('student-email').value;
            if (!email) {
                alert('Veuillez entrer votre email universitaire.');
                return;
            }
            
            // Check for valid student domain patterns
            const studentDomains = ['.edu', '.ac.fr', '.univ-', '.ens.', '.insa-', '.polytechnique.', '.hec.', '.sciencespo.', '.epfl.', '.ethz.'];
            const isStudent = studentDomains.some(domain => email.toLowerCase().includes(domain));
            
            if (isStudent) {
                alert('‚úÖ Email universitaire d√©tect√© !\n\nUn lien de v√©rification va √™tre envoy√© √† ' + email + '\n\nV√©rifie ta bo√Æte mail (et les spams) dans les prochaines minutes.');
            } else {
                alert('‚ö†Ô∏è Ce domaine ne semble pas √™tre un domaine universitaire reconnu.\n\nSi tu penses qu\'il s\'agit d\'une erreur, contacte-nous √† students@asemantix.tech avec une preuve de ton statut √©tudiant.');
            }
        }
    </script>
